<div class="row">
	<% @recipes.each do |recipe| %>
		<div class="col-md-4">
			<div class="recipe">
				<div class="image_wrapper">
					<%= link_to recipe do %>
						<%= image_tag recipe.image.url(:medium) %>
					<% end %>
				</div>
				<h2><%= link_to recipe.title, recipe_path(recipe) %></h2>					
			</div>				
		</div>
	<% end %>
</div>




