<div class="main_content">

	<div class="row" id="recipe_top">
		<div class="col-md-4">
			<%= image_tag @recipe.image.url(:medium), class: "recipe_image" %>
		</div>
		<div class="col-md-8">
			<div id="recipe_info">
				<h2><%= @recipe.title %></h2>
				<p><%= @recipe.description %></p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div id="ingredients">
				<h2>Ingredients</h2>
				<ul>
					<% @recipe.ingredients.each do |ingredient| %>
						<li><%= ingredient.name %></li>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="col-md-6">
			<div id="directions">
				<h2>Directions</h2>
				<ul>
					<% @recipe.directions.each do |direction| %>
						<li><%= direction.step %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>

	<div class="row">		
		<%= link_to "Back", root_path, class: "btn btn-default" %>
		<%= link_to "Edit", edit_recipe_path, class: "btn btn-info" %>
		<%= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger" %>
	</div>

</div>
